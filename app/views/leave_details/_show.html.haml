%div#remaining_leave.modal.hide.fade{tabindex: "-1", role: 'dialog'}
  .modal-header
    %h3
      Available Leave
  .modal-body
    %table.table.table-striped
      %tbody
        %tr
          %td{width: "45%"}
            = image_tag(asset_url("sick_leave.jpg"), class: "leave-icon")
            Sick Leave
          %td{width: "55%"}
            = available_leave["Sick"]
        %tr
          %td{width: "45%"}
            = image_tag(asset_url("casual_leave.jpg"), class: "leave-icon")
            Casual Leave
          %td{width: "55%"}
            = available_leave["Casual"]   
        %tr
          %td{width: "45%"}
            = image_tag(asset_url("paid_leave.jpg"), class: "leave-icon")
            Privilege Leave
          %td{width: "55%"}
            = available_leave["TotalPrivilege"]
  .modal-footer
    %a{class: 'btn', data:{dismiss: "modal"}} 
      Close 
