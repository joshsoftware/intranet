- if can? :manage, Company
  .remove_underline
    = link_to '', new_company_path, data: {'no-turbolink' =>  true}, "data-toggle" => "tooltip", title: "Add Project",
                 class: "icon-plus" unless (params[:action] == "new" || params[:action] == "show")
    = link_to '', edit_company_path, data: {'no-turbolink' =>  true}, "data-toggle" => "tooltip", title: "Edit Project",
                 class: "icon-edit" if params[:action] == "show"
    = ["show", "edit", 'index'].include?(params[:action]) ? "|" : ''
    = link_to '', companies_path, "data-toggle" => "tooltip", title: "All Companies",
                 class: " icon-th-list" unless params[:action] == "index"
    = link_to '', companies_path(format: 'csv'), class: 'icon-download-alt', title: 'Download Company CSV' if params[:action] == 'index'

